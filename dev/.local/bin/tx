#!/bin/sh

# NAME
# 
# 	tx - tmux session manager
#
# SYNOPSIS
#
# 	tx
#
# SEE ALSO
#
# 	tmux(1), fzf(1)

main() {
	path="$(find ~/Code -mindepth 1 -maxdepth 1 -type d | fzf)" || {
		tx_error "interrupted"
		exit 130
	}

	tx_open "$path"
}

tx_open() {
	name="$(tx_new "$1")"

	if [ "$TMUX" ]; then
		tmux switch-client -t "$name"
	else
		tmux attach-session -t "$name"
	fi
}

tx_new() {
	name="$(basename -- "$1")"
	if tmux has-session -t "$name" 2> "/dev/null"; then
		printf "%s\n" "$name"
		return
	fi

	tmux new-session -d -s "$name" -c "$1" -n "code"
	tmux new-window -t "$name:2" -c "$1" -n "view"
	tmux new-window -t "$name:3" -c "$1" -n "misc"
	tmux split-window -t "$name:3" -c "$1"
	tmux split-window -h -t "$name:3" -c "$1"
	tmux select-pane -t "$name:3.1"
	tmux select-window -t "$name:2"
	tmux select-window -t "$name:1"

	printf "%s\n" "$name"
}

tx_error() {
	printf "tx: %s\n" "$1" > /dev/stderr
}

main
