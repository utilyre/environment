#!/bin/sh

path="$(realpath -- "${1:-"$PWD"}")"
name="$(printf '%s' "${2:-"$(basename -- "$path")"}" | tr -c '[:alnum:]_-' '_')"

if tmux new-session -dc "$path" -s "$name" 2> /dev/null; then
	tmux send-keys -t "$name:1" hx Enter
	tmux new-window -dc "$path" -t "$name" lazygit
	[ -f .tmux.conf ] && tmux source-file -t "$name" .tmux.conf
fi

if [ "$TMUX" ]; then
	tmux switch-client -t "$name"
else
	tmux attach-session -t "$name"
fi
