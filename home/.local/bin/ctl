#!/bin/sh

error() {
  printf 'ctl: %s\n' "$1"
  exit 1
}

device=volume

while [ $# -gt 0 ]; do
  case "$1" in
    -v|--volume)
      device=volume
      shift
      ;;
    -l|--light)
      device=light
      shift
      ;;
    -m|--mic)
      device=mic
      shift
      ;;
    --*|-*)
      error "unrecognized option '$1'"
      ;;
    *) break ;;
  esac
done

if [ $# -eq 0 ]; then
  error 'not enough arguments'
fi

case "$device" in
  volume)
    case "$1" in
      toggle) pamixer -t ;;
      down) pamixer -d5 ;;
      up) pamixer -i5 ;;
    esac
    if [ "$(pamixer --get-mute)" = 'true' ]; then
      echo 0 > "$WOB_PIPE"
    else
      pamixer --get-volume > "$WOB_PIPE"
    fi
    ;;
  light)
    case "$1" in
      down) brightnessctl set -e 5%- ;;
      up) brightnessctl set -e 5%+ ;;
    esac
    brightnessctl info -m | cut -d, -f4 | tr -d % > "$WOB_PIPE"
    ;;
  mic)
    case "$1" in
      toggle) pactl set-source-mute @DEFAULT_SOURCE@ toggle;;
    esac
    ;;
esac
