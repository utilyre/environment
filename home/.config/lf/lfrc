set mouse true
set ratios 1:1
set drawbox true
set roundbox true
set scrolloff 5
set dircounts true
set info size
set sortby time
set reverse true
set dirfirst false
set incsearch true
set previewer lf-preview

map <space> toggle
map a push :create<space>

cmd create %{{
	file="$(realpath -m -- "$1")"
	if [ "$(printf '%s' "$1" | tail -c1)" = "/" ]; then
		mkdir -p -- "$file"
	else
		mkdir -p -- "$(dirname -- "$file")"
		touch -- "$file"
	fi
}}
